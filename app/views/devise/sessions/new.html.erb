<div class="container">
	<div class="row">
		<div class="span6">
<h2>Sign in</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  
  <%= f.input :email %>
  <%= f.input :password %>
  <%= f.input :remember_me, as: :boolean %>

  <div class="form-actions">
  	<%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
<div class="span6" id="facebooksignup">

 <button class="facebooksign"><%= link_to "Sign in with Facebook", user_omniauth_authorize_path(:facebook) %></button>

		</div>
	</div>
</div>