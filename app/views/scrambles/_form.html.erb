<div class="row-fluid">
<%= simple_form_for(@scramble, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>
  <div class="span12">
    <div class="span6">

    <%= f.input :title, placeholder: 'Title of your scramble', label: false %>
    <%= f.input :price, label: false, placeholder: "Price" %>
    <%= f.input :description, as: :text, input_html: { rows: "5" }, label: false, placeholder: 'Describe your scramble here' %>
</div>

 <div class="span6">
    <%= f.input :image, label: false %>

  </div>
  <div class="span4 offset2">
      <%= f.button :submit, class: "btn btn-primary" %>
    </div>
<% end %>
</div>
</div>