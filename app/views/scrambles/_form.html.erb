<html ng-app="scrambleSetup">
<%= csrf_meta_tags %>
<div class="row-fluid" ng-controller="NewScramble">
<%= simple_form_for(@scramble, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>
  <div class="span12">
    <div class="span6">

    <%= f.label :title %>
    <%= f.text_field :title, :'ng-model' => 'scrambleTitle' %><br/>
    <%= f.label :price %>
    <%= f.text_field :price, :'ng-model' => 'scramblePrice' %><br/>
    <%= f.label :minimumPrice %>
    <%= f.text_field :minimumPrice, :'ng-model' => 'scrambleMinPrice' %><br/>
    <%= f.label :availableItems %>
    <%= f.text_field :availableItems, :'ng-model' => 'scrambleAvailableItems' %><br/>
    <%= f.label :description %>
    <%= f.text_area :description, rows: "5" , cols: "40", :'ng-model' => 'scrambleDescription' %><br/>
    
</div>

 <div class="span6">
    <%= f.input :image, label: "Upload an image" %>
    <h3> Set your milestones </h3>

      <form novalidate class="test-msform">
          <input type="text" ng-model="newMilestone">
          <input type="button" ng-click="addMilestone()" value="Add"><br/>
            <li ng-repeat="milestone in milestones">
              {{milestone}}
            </li>
      </form>

  </div>

  </div>
  <div class="span4 offset2">
      <%= submit_tag "Create scramble", :type => 'button', :'ng-click' => 'createScramble()', class: "btn btn-primary" %>
    </div>
<% end %>
</div>
</div>